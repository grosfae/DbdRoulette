<UserControl x:Class="DbdRoulette.Addons.ChapterRectangle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DbdRoulette.Addons"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="150" >

    <Polygon Points="30 0 0 300 150 300 180 0">
        <Polygon.Fill>
            <ImageBrush ImageSource="{Binding MainImage}" Stretch="UniformToFill"/>
        </Polygon.Fill>
    </Polygon>
</UserControl>
