                                                                        <Image Source="/Resources/Misc/TerrorIcon.png" RenderOptions.BitmapScalingMode="Fant" Width="40" Height="40" Margin="0 0 0 3" Stretch="UniformToFill" HorizontalAlignment="Center"/>
                                                                    </Grid>
                                                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0">
                                                                        <TextBlock Text="Террор" FontSize="16" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Left" Style="{DynamicResource ArkhipText}">
                                                                            <TextBlock.Foreground>
                                                                                <SolidColorBrush Color="White" Opacity="0.4"/>
                                                                            </TextBlock.Foreground>
                                                                        </TextBlock>
                                                                        <TextBlock Text="{Binding TerrorRadius, StringFormat='{}{0} м'}" FontSize="16" FontWeight="Bold" TextAlignment="Center" Foreground="White" HorizontalAlignment="Left" Style="{DynamicResource ArkhipText}"/>
                                                                    </StackPanel>
                                                                </StackPanel>

                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Grid>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </StackPanel>
                                    <Button Grid.Row="1" x:Name="KillerRollBtn" Style="{DynamicResource HalfOpacityButton}" Content="Определить случайного убийцу" FontSize="30" Height="60" Width="1100" Margin="0 10 0 0" Click="KillerRollBtn_Click"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel Margin="0 0 0 0">
                                <TextBlock Style="{DynamicResource Header}" Foreground="White" Text="История результатов" HorizontalAlignment="Center" FontSize="40" />
                                <Grid Margin="0 0 0 40">
                                    <ListView x:Name="LvResultHistory" d:ItemsSource="{d:SampleData ItemCount=15}" Margin="0 10 0 0" Width="1120" HorizontalAlignment="Center" Height="340" BorderBrush="#FF3881EF" BorderThickness="1">
                                        <ListView.Background>
                                            <SolidColorBrush Color="#FF121212" Opacity="0.4"/>
                                        </ListView.Background>
                                        <ListView.Template>
                                            <ControlTemplate TargetType="ItemsControl">
                                                <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="{TemplateBinding Height}" Background="{TemplateBinding Background}">
                                                    <ItemsPresenter VerticalAlignment="Top" HorizontalAlignment="Center"/>
                                                </ScrollViewer>
                                            </ControlTemplate>
                                        </ListView.Template>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <addons:RouletteResultRowControl DataContext="{Binding}"/>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <Rectangle x:Name="RecGradient" Height="150" Fill="#FF2D63A1" Grid.Row="2">
                    <Rectangle.OpacityMask>
                        <LinearGradientBrush EndPoint="0.5,1.5" StartPoint="0.5,0">
                            <GradientStop Color="Transparent" Offset="0.15"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
