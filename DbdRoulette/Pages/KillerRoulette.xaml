<Page x:Class="DbdRoulette.Pages.KillerRoulette"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DbdRoulette.Pages"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="KillerRoulette">

    <Grid>
        <Button Height="30" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" Content="SPIN" Click="SpinButton_Click"/>
        <Grid Height="400">
            <Polygon Fill="BlueViolet" Points="15 30 30 0 0 0 10 20" VerticalAlignment="Top" HorizontalAlignment="Center" Panel.ZIndex="3"/>
            <Grid x:Name="RouletteGrid"  Width="400" Height="400" RenderTransformOrigin="0.5,0.5" >
                <Grid.RenderTransform>
                    <RotateTransform Angle="0" x:Name="transform"/>
                </Grid.RenderTransform>

                <lvc:PieChart x:Name="PieChartGraph">

                </lvc:PieChart>
            </Grid>
        </Grid>
    </Grid>
</Page>
